page {
    background: #f6f6f6;
    -webkit-justify-content: flex-start;
    justify-content: flex-start
}

.list,page {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column
}

.list {
    -webkit-align-items: stretch;
    align-items: stretch;
    background: #fff;
    border: 1px solid rgba(0,0,0,.1);
    border-left: none;
    border-right: none;
    height: auto;
    margin-top: 40rpx;
    padding: 0 40rpx;
    transition: all .3s ease
}

.list,.list-item {
    box-sizing: border-box;
    width: 100%
}

.list-item {
    -webkit-align-content: center;
    align-content: center;
    border-top: 1px solid rgba(0,0,0,.1);
    color: #007aff;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    font-size: 34rpx;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    line-height: 104rpx;
    padding: 0
}

.list-item:first-child {
    border-top: none
}

.list-item wx-image {
    margin: 20rpx 0;
    max-height: 20vh;
    max-width: 100%
}

.request-text {
    color: #222;
    font-size: 24rpx;
    line-height: 36rpx;
    padding: 20rpx 0;
    word-break: break-all
}

.guide {
    box-sizing: border-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    padding: 40rpx;
    width: 100%
}

.guide .headline {
    color: #555;
    font-size: 34rpx;
    font-weight: 700;
    line-height: 40rpx
}

.guide .code,.guide .p {
    color: #666;
    font-size: 28rpx;
    line-height: 36rpx;
    margin-top: 20rpx
}

.guide .code {
    background: #fff;
    white-space: pre
}

.guide .code-dark {
    background: rgba(0,0,0,.8);
    border-radius: 6rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 36rpx;
    margin-top: 20rpx;
    padding: 20rpx;
    white-space: pre
}

.guide wx-image {
    max-width: 100%
}

.guide .image1 {
    height: 47px;
    margin-top: 20rpx;
    max-width: 100%;
    width: 356px
}

.guide .image2 {
    height: 100px;
    margin-top: 20rpx;
    width: 264px
}

.guide .flat-image {
    height: 100px
}

.guide .code-image {
    max-width: 100%
}

.guide .copyBtn {
    font-size: 20rpx;
    margin-left: 0;
    margin-top: 16rpx;
    width: 180rpx
}

.guide .nav {
    -webkit-align-content: space-between;
    align-content: space-between;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    margin-top: 50rpx
}

.guide .nav .prev {
    margin-left: unset
}

.guide .nav .next {
    margin-right: unset
}
