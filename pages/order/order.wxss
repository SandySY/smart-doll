.main {
    padding: 40px
}

.h1 {
    font-size: 20px;
    height: 44px;
    line-height: 44px;
    margin: 0;
    position: relative
}

.teacher {
    background-color: #fff;
    border: 1px solid #dbdbdb;
    border-radius: 6px;
    color: #abaaaa;
    padding: 20px 0;
    text-align: center
}

.teacher wx-image {
    border-radius: 50%;
    display: block;
    height: 60px;
    margin: auto auto 10px;
    width: 60px
}

.fa {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    display: inline-block;
    font: normal normal normal 14px/1 FontAwesome;
    font-size: inherit;
    text-rendering: auto;
    -webkit-transform: translate(0,0);
    transform: translate(0,0)
}

.loc {
    background-color: #fff;
    border: 1px solid #dbdbdb;
    border-radius: 6px;
    display: table;
    margin-top: 0;
    width: 100%
}

.btns {
    margin-top: 40px
}

.btns,.city {
    text-align: center
}

.city {
    border-right: 1px solid #d9d9d9;
    color: #ff8b01;
    vertical-align: middle;
    width: 20%
}

.city,.loc-box {
    display: table-cell
}

.loc-box wx-view {
    padding: 10px
}

.where {
    border-bottom: 1px solid #d9d9d9;
    line-height: 1.3
}

.comment {
    background-color: #fff;
    border: 1px solid #dbdbdb;
    border-radius: 80px;
    color: #6e6e6e;
    display: inline-block;
    font-size: 14px;
    height: 80px;
    text-align: center;
    width: 80px
}

.comment wx-i {
    color: #ff8903;
    display: block;
    font-size: 18px;
    margin-bottom: 4px;
    margin-top: 20px
}

.comment wx-image {
    display: block;
    height: 40px;
    margin: 8px auto;
    width: 40px
}

.ok {
    background-color: #ff8c03;
    border-radius: 6px;
    color: #fff;
    display: block;
    height: 80%;
    margin-top: 20px;
    outline: none;
    padding: 2px 0;
    width: 100%
}

.where wx-image {
    height: 21px;
    line-height: 21px;
    width: 21px
}

.when wx-image,.where wx-image {
    margin-right: 5px;
    vertical-align: top
}

.when wx-image {
    height: 18px;
    line-height: 18px;
    width: 18px
}

.logs {
    color: gray;
    font-size: 28rpx;
    margin-top: 20px
}

.logs,.shit {
    text-align: center
}

.shit {
    background: #f88f00;
    -webkit-background-size: 58px 27px;
    background-size: 58px 27px;
    border-radius: 6px;
    color: #fff;
    -webkit-flex: 1;
    flex: 1;
    font-size: 16px;
    line-height: 22px;
    margin: 0 10px;
    top: 20px
}
